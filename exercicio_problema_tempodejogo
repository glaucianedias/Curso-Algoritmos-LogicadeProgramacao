Algoritmo "Problema_tempodejogo"

Var

   hora1, hora2, duracao : inteiro

Inicio

   escreva("Hora inicial: ")
   leia(hora1)
   escreva("Hora final: ")
   leia(hora2)
   
   se (hora1 > hora2) entao
      duracao <- (24 - hora1) + hora2
      escreva("O JOGO DUROU ", duracao, " HORA(S)")
   senao
      se (hora1 < hora2) entao
          duracao <- (hora2 - hora1)
          escreva("O JOGO DUROU ", duracao, " HORA(S)")
      senao
         se (hora1 = hora2) entao
            escreva("O JOGO DUROU 24 HORAS")
         fimse
      fimse
   fimse
   
Fimalgoritmo
